<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO" monitor="60" >
    <!-- watch configuration file for changes, check every 60seconds -->

    <Properties>
        <Property name="PID">????</Property>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
        <Property name="CONSOLE_LOG_PATTERN">%clr{%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %clr{${LOG_LEVEL_PATTERN}} %clr{${sys:PID}}{magenta} %clr{---}{faint} [tid=%38.-38X{messageid}] [processor=%20.-20X{message_processor}] %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
        <Property name="FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} ${sys:PID} --- [tid=%64.-64X{messageid}] [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <!-- <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] [msgid=%X{messageid}] %-5level %logger{36} - %msg%n" /> -->
            <PatternLayout pattern="${sys:CONSOLE_LOG_PATTERN}" />
        </Console>
    </Appenders>

    <!-- TODO: add examples for BUSINESS, SECURITY, MARKER LOGGING -->

    <Loggers>
        <Root level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Root>
        <Logger name="org.liquibase" level="info"  >
            <AppenderRef ref="Console" />
        </Logger>

        <Logger name="eu.domibus.connector" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="eu.domibus.connector.persistence" level="TRACE" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>

        <Logger name="org.hibernate" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
    </Loggers>
</Configuration>