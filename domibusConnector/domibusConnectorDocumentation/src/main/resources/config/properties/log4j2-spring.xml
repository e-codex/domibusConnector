<?xml version="1.0" encoding="UTF-8"?>
<!--
How to configure log4j2:
   https://logging.apache.org/log4j/2.x/manual/configuration.html
-->
	
<Configuration status="INFO">
	<Properties>
        <Property name="basePath">!!Path to logfile!!</Property>
        <!-- Example -->
        <!-- <Property name="basePath">${CATALINA_HOME}/logs/</Property> -->
    </Properties>
    <Appenders>
        <Console name="Business" target="SYSTEM_OUT">
            <MarkerFilter marker="BUSINESS" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%style{%d %-5level - %marker - messageid: [%mdc{messageid}] - %msg%n}{Cyan}" />
        </Console>
        <Console name="Console" target="SYSTEM_OUT">
            <!--<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - messageid: [%mdc{messageid}] - %msg%n" /> -->
			<PatternLayout pattern="%d [%t] %-5level %logger{36} %msg%n" />
        </Console>
		<RollingFile name="fileLogger" fileName="${basePath}connector.log" filePattern="${basePath}connector-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>%d [%t] %-5level %logger{36} %msg%n</pattern>
            </PatternLayout>
            <Policies>
				<SizeBasedTriggeringPolicy size="5M" />
                <!-- <TimeBasedTriggeringPolicy interval="1" modulate="true" /> -->
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
			<AppenderRef ref="fileLogger" />
        </Root>
        <Logger name="eu.domibus.connector" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="Business" />
			<AppenderRef ref="fileLogger" />
        </Logger>
    </Loggers>
</Configuration>