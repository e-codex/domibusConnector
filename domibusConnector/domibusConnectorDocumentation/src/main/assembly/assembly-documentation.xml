<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>documentation</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <includes>
                <include>**</include>
            </includes>
            <directory>${html.docu.output.directory}</directory>
            <outputDirectory>webdocu/documentation</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>**</include>
            </includes>
            <directory>${html.docu.output.directory}/../images</directory>
            <outputDirectory>webdocu/images</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>**</include>
            </includes>
            <directory>${project.basedir}/src/main/docs</directory>
            <outputDirectory>docs/old</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>**</include>
            </includes>
            <directory>${project.basedir}/src/main/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>**</include>
            </includes>
            <directory>${project.basedir}/target/generated-pdfs</directory>
            <outputDirectory>docs/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
