<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  
  <bean id="contentValidatorFactory" class="eu.domibus.connector.common.NationalImplementationFactory">
  	<property name="implementationClassName" value="${connector.content.validation.implementation.class.name}" />
  	<property name="implClassPropertyName" value="connector.content.validation.implementation.class.name" />
  	<property name="defaultImplementationClassName" value="eu.domibus.connector.validation.DomibusConnectorContentValidatorDefaultImpl" />
  	<property name="preConditions">
		<map>
			<entry key="connector.use.content.validation" value="${connector.use.content.validation}" />
		</map>
	</property>
  </bean>

  <bean id="contentValidator" factory-bean="contentValidatorFactory" factory-method="createImplementation" >
  </bean>
  
</beans>