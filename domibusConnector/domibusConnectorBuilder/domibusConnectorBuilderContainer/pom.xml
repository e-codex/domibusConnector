        <artifactId>domibusConnectorBuilder</artifactId>
        <version>4.4.8-RC2-SNAPSHOT</version>
    </parent>
    <artifactId>domibusConnectorBuilderContainer</artifactId>
    <packaging>jar</packaging>
    <dependencies>
        <dependency>
            <groupId>eu.domibus.connector</groupId>
            <artifactId>domibusConnectorUI</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.domibus.connector</groupId>
            <artifactId>domibusConnectorStarter</artifactId>
            <version>${project.version}</version>
        </dependency>
