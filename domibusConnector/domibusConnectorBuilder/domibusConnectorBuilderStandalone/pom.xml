<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>eu.domibus.connector</groupId>
        <artifactId>domibusConnectorBuilder</artifactId>
        <version>4.4.5-RC2-SNAPSHOT</version>
    </parent>
    <artifactId>domibusConnectorBuilderStandalone</artifactId>
    <properties>
        <run.env>dev</run.env>
    </properties>
    <dependencies>
        <dependency>
            <groupId>eu.domibus.connector</groupId>
            <artifactId>domibusConnectorUI</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.domibus.connector</groupId>
            <artifactId>domibusConnectorStarter</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.fusesource.jansi</groupId>
            <artifactId>jansi</artifactId>
            <version>2.4.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <!-- will be packed together by the spring boot plugin -->
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-loader</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>build-info</goal>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass>eu.domibus.connector.starter.DomibusConnectorStarter</mainClass>
                    <requiresUnpack>
                        <dependency>
                            <groupId>eu.domibus.connector</groupId>
                            <artifactId>domibusConnectorUI</artifactId>
                        </dependency>
                    </requiresUnpack>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.vaadin</groupId>
                <artifactId>vaadin-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-frontend</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jkube</groupId>
                <artifactId>openshift-maven-plugin</artifactId>
                <version>1.7.0</version>
                <configuration>
                    <buildStrategy>docker</buildStrategy>
                    <resources>
                        <openshiftBuildConfig>
                            <requests>
                                <cpu>200m</cpu>
                                <memory>256Mi</memory>
                            </requests>
                            <limits>
                                <cpu>1000m</cpu>
                                <memory>1Gi</memory>
                            </limits>
                        </openshiftBuildConfig>
                    </resources>
<!--                    <generator>-->
<!--                        <includes>-->
<!--                            <include>spring-boot</include>-->
<!--                        </includes>-->
<!--                        <config>-->
<!--                            <spring-boot>-->
<!--                                <alias>spring-boot</alias>-->
<!--                                <fromMode>istag</fromMode>-->
<!--                                <from>openshift/java:openjdk-8-ubi8</from>-->
<!--                            </spring-boot>-->
<!--                        </config>-->
<!--                    </generator>-->
                    <images>
                        <image>
                            <name>domibusconnector</name>
                            <build>
<!--                                -->
<!--                                <from>openshift/java:openjdk-8-ubi8</from>-->
<!--                                <from>brz-cp-ubi-openjdk8</from>-->
                                <fromExt>
                                    <name>java:openjdk-8-ubi8</name>
                                    <kind>ImageStreamTag</kind>
                                    <namespace>openshift</namespace>
                                </fromExt>
                                <assembly>
                                    <mode>dir</mode>
                                    <targetDir>/app</targetDir>
                                    <excludeFinalOutputArtifact>true</excludeFinalOutputArtifact>
                                    <layers>
                                        <layer>
                                            <id>connector-jar</id>
                                            <files>
                                                <file>
                                                    <source>${project.basedir}/target/${project.artifactId}-${project.version}.jar</source>
                                                    <outputDirectory>bin</outputDirectory>
                                                    <destName>connector.jar</destName>
                                                </file>
                                            </files>
                                        </layer>
                                    </layers>
                                </assembly>
                                <env>
                                    <JAVA_OPTS>-XX:MetaspaceSize=256M</JAVA_OPTS>
                                </env>
                                <entryPoint>
                                    <!-- shell form  -->
                                    <shell>java $JAVA_OPTS -Dloader.path=/app/lib -Dspring.config.name=connector -cp /app/bin/connector.jar org.springframework.boot.loader.PropertiesLauncher</shell>
                                </entryPoint>
<!--                                <env>-->
<!--                                    <JAVA_LIB_DIR>/app</JAVA_LIB_DIR>-->
<!--                                    <JAVA_MAIN_CLASS>eu.domibus.connector.starter.DomibusConnectorStarter</JAVA_MAIN_CLASS>-->
<!--                                </env>-->
                            </build>
                        </image>
                    </images>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <!-- Production mode is activated using -Pproduction -->
            <id>production</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.vaadin</groupId>
                        <artifactId>vaadin-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>build-frontend</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <vaadin.productionMode>true</vaadin.productionMode>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.vaadin</groupId>
                    <artifactId>flow-server-production-mode</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
