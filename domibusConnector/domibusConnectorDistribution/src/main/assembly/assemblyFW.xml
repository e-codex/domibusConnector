<assembly>
	<id>Framework</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		
		<!-- ==================== Copying Module's JAR files ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorCommon/target/
			</directory>
			<outputDirectory>${modules.output.dir}/domibusConnectorCommon
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorContentMapper/target/
			</directory>
			<outputDirectory>${modules.output.dir}/domibusConnectorContentMapper
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorController/target/
			</directory>
			<outputDirectory>${modules.output.dir}/domibusConnectorController
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorEvidencesToolkit/target/
			</directory>
			<outputDirectory>${modules.output.dir}/domibusConnectorEvidencesToolkit
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorGatewayPluginClient/target/
			</directory>
			<outputDirectory>${modules.output.dir}/domibusConnectorGatewayPluginClient
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorGatewayWebserviceClient/target/
			</directory>
			<outputDirectory>${modules.output.dir}/domibusConnectorGatewayWebserviceClient
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorMonitoring/target/
			</directory>
			<outputDirectory>${modules.output.dir}/domibusConnectorMonitoring
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorNationalBackendClient/target/
			</directory>
			<outputDirectory>${modules.output.dir}/domibusConnectorNationalBackendClient
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorSecurityToolkit/target/
			</directory>
			<outputDirectory>${modules.output.dir}/domibusConnectorSecurityToolkit
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		
	</fileSets>

	<files>
		<!-- ==================== Copying Parent POM ================= -->
		<file>
			<source>${project.basedir}/../pom.xml</source>
			<outputDirectory>${connector.build.dir}</outputDirectory>
		</file>

		<!-- ==================== Copying Module's POM files ================= -->

		<file>
			<source>${project.basedir}/../domibusConnectorCommon/pom.xml</source>
			<outputDirectory>${modules.output.dir}/domibusConnectorCommon
			</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/../domibusConnectorContentMapper/pom.xml
			</source>
			<outputDirectory>${modules.output.dir}/domibusConnectorContentMapper
			</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/../domibusConnectorController/pom.xml
			</source>
			<outputDirectory>${modules.output.dir}/domibusConnectorController
			</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/../domibusConnectorEvidencesToolkit/pom.xml
			</source>
			<outputDirectory>${modules.output.dir}/domibusConnectorEvidencesToolkit
			</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/../domibusConnectorGatewayPluginClient/pom.xml
			</source>
			<outputDirectory>${modules.output.dir}/domibusConnectorGatewayPluginClient
			</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/../domibusConnectorGatewayWebserviceClient/pom.xml
			</source>
			<outputDirectory>${modules.output.dir}/domibusConnectorGatewayWebserviceClient
			</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/../domibusConnectorMonitoring/pom.xml
			</source>
			<outputDirectory>${modules.output.dir}/domibusConnectorMonitoring
			</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/../domibusConnectorNationalBackendClient/pom.xml
			</source>
			<outputDirectory>${modules.output.dir}/domibusConnectorNationalBackendClient
			</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/../domibusConnectorSecurityToolkit/pom.xml
			</source>
			<outputDirectory>${modules.output.dir}/domibusConnectorSecurityToolkit
			</outputDirectory>
		</file>

		
	</files>

	<!-- ==================== Copying Non-Public Dependecies ================= -->
	
	<dependencySets>
		<dependencySet>
			<scope>runtime</scope>
			<outputDirectory>${lib.output.dir}</outputDirectory>
			<includes>
				<include>*:dss*:*</include>
				<include>*:ecodex-container:*</include>
				<include>*:EvidenceBuilder:*</include>
				<include>*:discovery-library:*</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>