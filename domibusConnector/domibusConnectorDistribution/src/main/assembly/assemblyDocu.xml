<assembly>
	<id>Documentation</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- ==================== Copying DB Scripts ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorDocumentation/src/main/resources/DbScripts</directory>
			<outputDirectory>${db.scripts.output.dir}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorWebAppModule/src/main/resources/DbScripts</directory>
			<outputDirectory>${db.scripts.output.dir}</outputDirectory>
		</fileSet>
		<!-- ==================== Copying Docs ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorDocumentation/src/main/resources/docs</directory>
			<outputDirectory>${documentation.output.dir}</outputDirectory>
			<includes>
				<include>domibusConnector_*.pdf</include>
			</includes>
		</fileSet>
        <fileSet>
			<directory>${project.basedir}/../target/pdf</directory>
			<outputDirectory>${documentation.output.dir}</outputDirectory>
			<includes>
				<include>*.pdf</include>
			</includes>
		</fileSet>
		
		<!-- ==================== Copying example properties/config ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorDocumentation/src/main/resources/config</directory>
			<outputDirectory>${properties.output.dir}/config/</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
		</fileSet>
	</fileSets>

	<files>
		<!-- ==================== Copying DatabaseInitializer ================= -->
		<file>
			<source>${project.basedir}/../domibusConnectorTest/domibusConnectorDatabaseInitializer/target/domibusConnectorDatabaseInitializer-4.0.0-beta2-SNAPSHOT-jar-with-dependencies.jar</source>
			<outputDirectory>${documentation.output.dir}/databaseInitializer</outputDirectory>
			<destName>domibusConnectorDatabaseInitializer.jar</destName>
		</file>
		<!-- ==================== Copying Example Tomcat Context ================= -->
		<file>
			<source>${project.basedir}/../domibusConnectorWebAppModule/src/main/resources/docs/examplecontext/domibusConnectorWebApp.xml</source>
			<outputDirectory>${documentation.output.dir}/exampleContext</outputDirectory>
		</file>
        <!-- Copying Example application properties -->
        <file>
            <source>${project.basedir}/../domibusConnectorWebAppModule/src/main/resources/docs/example/application.properties</source>
            <outputDirectory>${documentation.output.dir}/exampleProperties</outputDirectory>
        </file>
	</files>

</assembly>