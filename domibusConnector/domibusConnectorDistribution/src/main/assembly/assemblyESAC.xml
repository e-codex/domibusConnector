<assembly>
	<id>Standalone</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- ==================== Copying DB Scripts ================= -->
		<fileSet>
			<directory>${project.basedir}/../DbScripts</directory>
			<outputDirectory>${db.scripts.output.dir}</outputDirectory>
		</fileSet>
		
		<!-- ==================== Copying Docs ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorRunnable/src/doc</directory>
			<outputDirectory>${documentation.output.dir}</outputDirectory>
			<includes>
				<include>*.pdf</include>
			</includes>
		</fileSet>
		
		<!-- ==================== Copying JAR files ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorRunnable/target/
			</directory>
			<outputDirectory>${connector.build.dir}bin
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
			</excludes>
		</fileSet>
		<!-- <fileSet>
			<directory>${project.basedir}/../domibusConnectorConfigurator/target/
			</directory>
			<outputDirectory>${connector.build.dir}
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
			</excludes>
			
		</fileSet> -->
		
		<!-- ==================== Copying dependency libraries ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorRunnable/target/lib/
			</directory>
			<outputDirectory>${lib.output.dir}
			</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		
		<!-- ==================== Copying startup scripts ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorRunnable/src/startupScripts
			</directory>
			<outputDirectory>${connector.build.dir}
			</outputDirectory>
		</fileSet>
		
		<!-- ==================== Copying example properties ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorRunnable/src/main/resources
			</directory>
			<outputDirectory>${documentation.output.dir}exampleProperties
			</outputDirectory>
			<includes>
				<include>connector.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorRunnable/src/main/resources
			</directory>
			<outputDirectory>${connector.build.dir}conf
			</outputDirectory>
			<includes>
				<include>log4j.properties</include>
			</includes>
		</fileSet>

		<!-- ==================== Creating empty messages folders ================= -->
		<fileSet>
			<directory>./</directory>
			<outputDirectory>${connector.build.dir}messages/incoming</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>./</directory>
			<outputDirectory>${connector.build.dir}messages/outgoing</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		
	</fileSets>
	<files>
	<file>
		<source>${project.basedir}/../domibusConnectorConfigurator/target/domibusConnectorConfigurator-${version}.jar
		</source>
		<outputDirectory>${connector.build.dir}</outputDirectory>
		<destName>domibusConnectorConfigurator.jar</destName>
	</file>
	</files>
</assembly>