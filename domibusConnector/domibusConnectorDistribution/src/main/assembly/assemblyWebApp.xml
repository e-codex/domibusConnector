<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>WebConnectorWithDocumentation</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../domibusConnectorPersistence/src/main/resources/dbscripts</directory>
            <outputDirectory>documentation/database-scripts</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
      <!--   <fileSet>
            <includes>
                <include>**/*</include>
            </includes>
            <directory>${project.basedir}/../domibusConnectorDocumentation/src/main/resources/config</directory>
            <outputDirectory>documentation/example-config</outputDirectory>
        </fileSet> -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources/config</directory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
            </includes>
            <outputDirectory>/standalone/config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/lib</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/standalone/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/config/keystores</directory>
            <includes>
                <include>*.jks</include>
            </includes>
            <outputDirectory>/standalone/config/keystores</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/..//domibusConnectorBuilder/domibusConnectorBuilderDeployable/target/domibusConnectorBuilderDeployable-${project.version}.war</source>
            <outputDirectory>/webapp</outputDirectory>
            <destName>domibusConnector.war</destName>
        </file>
        <file>
            <source>${project.basedir}/../domibusConnectorBuilder/domibusConnectorBuilderStandalone/target/domibusConnectorBuilderStandalone-${project.version}.jar</source>
            <destName>connector.jar</destName>
            <outputDirectory>standalone/bin</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/bash/start.sh</source>
            <fileMode>0777</fileMode>
            <lineEnding>unix</lineEnding>
            <outputDirectory>standalone</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/cmd/start.bat</source>
            <lineEnding>windows</lineEnding>
            <outputDirectory>standalone</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>${project.groupId}:domibusConnectorDocumentation:zip:documentation:${project.version}</include>
            </includes>
            <unpack>true</unpack>
            <outputDirectory>documentation</outputDirectory>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/domibusGatewayPlugin</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>eu.domibus.connector.plugin:domibus-connector-plugin-distribution:zip</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
