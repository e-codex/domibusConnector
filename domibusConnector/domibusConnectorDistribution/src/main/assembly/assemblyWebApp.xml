<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>WebConnector</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>        
	<fileSets>
        <!-- ==================== Copying Module's JAR files ================= -->
		<fileSet>
			<directory>${project.basedir}/../domibusConnectorWebAppModule/target/
			</directory>
			<outputDirectory>domibusConnectorWebApp/webapps</outputDirectory>
			<includes>
				<include>*.war</include>
			</includes>
		</fileSet>   
        <fileSet>
            <directory>${project.basedir}/../domibusConnectorWebAppModule/src/main/resources/ExampleProperties/</directory>
            <outputDirectory>domibusConnectorWebApp/conf/domibuswebapp/</outputDirectory>
            <includes>
                <include>domibuswebapp.properties</include>
            </includes>
        </fileSet>                     
    </fileSets>
</assembly>