<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>WebConnectorWithDocumentation</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>

		<fileSet>
			<directory>${project.basedir}/../domibusConnectorDocumentation/src/main/resources/config/properties/
			</directory>
			<outputDirectory>/documentation/properties
			</outputDirectory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${project.basedir}/../domibusConnectorDocumentation/src/main/resources/DbScripts/
			</directory>
			<outputDirectory>/documentation/database-scripts
			</outputDirectory>
			<includes>
				<include>*/*.*</include>
			</includes>
		</fileSet>

	</fileSets>
	<files>

		<file>
			<source>${project.basedir}/../domibusConnectorWebAppModule/target/domibusConnectorWebAppModule.war
			</source>
			<outputDirectory>/webapp</outputDirectory>
			<destName>domibusConnector-${version}.war</destName>
		</file>

		<file>
			<source>${project.basedir}/../domibusConnectorTest/domibusConnectorDatabaseInitializer/target/domibusConnectorDatabaseInitializer-${project.version}.jar
			</source>
			<outputDirectory>/documentation/databaseInitializer
			</outputDirectory>
			<destName>domibusConnectorDatabaseInitializer.jar</destName>
		</file>

		<file>
			<source>${project.basedir}/../domibusConnectorDocumentation/src/main/resources/docs/domibusConnector_InstallationGuide.pdf
			</source>
			<outputDirectory>/documentation/
			</outputDirectory>
			<destName>domibusConnector_InstallationGuide.pdf</destName>
		</file>


	</files>
</assembly>