<?xml version="1.0" encoding="UTF-8"?>
<!--
How to configure log4j2:
   https://logging.apache.org/log4j/2.x/manual/configuration.html
-->
<Configuration status="INFO">

    <Properties>
        <Property name="PID">????</Property>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
        <Property name="CONN_CONSOLE_LOG_PATTERN">%clr{%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %clr{${LOG_LEVEL_PATTERN}} %clr{${sys:PID}}{magenta} %clr{---}{faint} [tid=%38.38X{messageid}] %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
        <Property name="CONN_FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} ${sys:PID} --- [tid=%64.64X{messageid}] [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${sys:CONN_CONSOLE_LOG_PATTERN}" />
        </Console>
        <!-- rolling file appender -->
        <!--
        <RollingFile name="RollingFile" fileName="C:\Entwicklung\domibus\logs\connector.log" filePattern="C:\Entwicklung\domibus\logs\app-%d{MM-dd-yyyy}.log.gz"
                     ignoreExceptions="false">
            <PatternLayout pattern="${sys:CONN_FILE_LOG_PATTERN}" />
            <TimeBasedTriggeringPolicy />
        </RollingFile> -->
    </Appenders>

    <!-- TODO: add BUSINESS LOGS, LOG MARKERS -->

    <Loggers>
        <!-- ROOT logger -->
        <Root level="info" additivity="false">
            <AppenderRef ref="Console" />
            <!-- <AppenderRef ref="RollingFile" /> -->
        </Root>
        <!-- connector log -->
        <Logger name="eu.domibus.connector" level="info" additivity="false">
            <AppenderRef ref="Console" />
            <!-- <AppenderRef ref="RollingFile" /> -->
        </Logger>
    </Loggers>
</Configuration>