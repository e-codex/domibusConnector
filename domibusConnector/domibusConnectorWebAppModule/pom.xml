    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <webadmin.resources.dir>${project.basedir}/src/main/resources</webadmin.resources.dir>
        <webadmin.build.dir>domibusWebAdmin/</webadmin.build.dir>
        <documentation.output.dir>${webadmin.build.dir}documentation/</documentation.output.dir>
        <db.scripts.output.dir>${documentation.output.dir}db-scripts</db.scripts.output.dir>
        <modules.output.dir>${webadmin.build.dir}modules</modules.output.dir>
        <lib.output.dir>${webadmin.build.dir}lib</lib.output.dir>
