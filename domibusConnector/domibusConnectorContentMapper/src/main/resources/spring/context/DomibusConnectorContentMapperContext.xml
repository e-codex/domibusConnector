<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  
  <bean id="contentMapperFactory" class="eu.domibus.connector.common.NationalImplementationFactory">
  	<property name="implementationClassName" value="${connector.content.mapper.implementation.class.name}" />
  	<property name="implClassPropertyName" value="connector.content.mapper.implementation.class.name" />
  	<property name="defaultImplementationClassName" value="eu.domibus.connector.mapping.DomibusConnectorContentMapperDefaultImpl" />
  	<property name="preConditions">
		<map>
			<entry key="connector.use.content.mapper" value="${connector.use.content.mapper}" />
		</map>
	</property>
  </bean>

  <bean id="contentMapper" factory-bean="contentMapperFactory" factory-method="createImplementation" >
  </bean>
  
</beans>