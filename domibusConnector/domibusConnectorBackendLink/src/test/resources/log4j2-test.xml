<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n}{${web:logColor}}" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
        <Logger  name="eu.domibus.connector.ws.backend" level="trace" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>  
        <Logger name="org.apache.cxf" level="debug" additivity="false" >
            <AppenderRef ref="Console" />
        </Logger>  
        <Logger name="org.springframework" level="debug" additivity="false" >
            <AppenderRef ref="Console" />
        </Logger>
    </Loggers>
</Configuration>