    <changeSet author="domibusConnector" id="changelog_4.1_user_pw_table_primary_key">
        <addPrimaryKey tableName="DOMIBUS_CONNECTOR_USER_PWD" columnNames="ID" constraintName="PK_CONNECTOR_PASSWORD" />
    </changeSet>




    <changeSet author="domibusConnector" id="changelog_4.1_update_admin_user">
        <update tableName="DOMIBUS_CONNECTOR_USER">
