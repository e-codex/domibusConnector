    <changeSet author="domibusConnector" id="changelog_4.1_drop_pk">
        <dropPrimaryKey tableName="DOMIBUS_WEBADMIN_USER" />
    </changeSet>

    <changeSet author="domibusConnector" id="changelog_4.1_rename_user_table">
        <renameTable oldTableName="DOMIBUS_WEBADMIN_USER" newTableName="DOMIBUS_CONNECTOR_USER" />
    </changeSet>



    <changeSet author="domibusConnector" id="changelog_4.1_add_user_columns">
        <!--<renameColumn tableName="DOMIBUS_CONNECTOR_USER" oldColumnName="PROPERTIES_KEY" newColumnName="PROPERTY_KEY" />-->
        <!--<renameColumn tableName="DOMIBUS_CONNECTOR_PROPERTY" oldColumnName="PROPERTIES_VALUE" newColumnName="PROPERTY_VALUE" />-->
        <addColumn tableName="DOMIBUS_CONNECTOR_USER">
            <column name="ID" type="${id.type}" />
            <column name="LOCKED" type="BOOLEAN" />
            <column name="NUMBER_OF_GRACE_LOGINS" type="integer" />
            <column name="GRACE_LOGINS_USED" type="integer" />
            <column name="CREATED" type="TIMESTAMP" />
        </addColumn>
    </changeSet>

    <changeSet author="domibusConnector" id="changelog_4.1_add_user_columns_id">
        <preConditions onFail="MARK_RAN">
                <dbms type="mysql" />
        </preConditions>
        <addColumn tableName="DOMIBUS_CONNECTOR_USER">
            <column name="IDG" type="${id.type}" autoIncrement="true">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="domibusConnector" id="changelog_4.1_add_user_columns_id_mysql" >
        <!-- mysql has no support for sequences! -->
        <preConditions onFail="MARK_RAN">
            <not>
                <dbms type="mysql" />
            </not>
        </preConditions>
        <createSequence sequenceName="GEN" />
        <addColumn tableName="DOMIBUS_CONNECTOR_USER">
            <column name="IDG" type="${id.type}" defaultValueSequenceNext="GEN">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <dropSequence sequenceName="GEN" />
    </changeSet>

    <changeSet author="domibusConnector" id="changelog_4.1_user_table_copy_generated_to_id">
        <!-- copy generated values into the pk column -->
        <sql>UPDATE DOMIBUS_CONNECTOR_USER SET ID=IDG</sql>
        <dropColumn tableName="DOMIBUS_CONNECTOR_USER" columnName="IDG" />
    </changeSet>


    <changeSet author="domibusConnector" id="changelog_4.1_user_table_primary_key">
        <addNotNullConstraint tableName="DOMIBUS_CONNECTOR_USER" columnName="ID" columnDataType="${id.type}" />
        <addPrimaryKey tableName="DOMIBUS_CONNECTOR_USER" columnNames="ID" constraintName="PK_CONNECTOR_USER" />
    </changeSet>

    <changeSet author="domibusConnector" id="changelog_4.1_create_password_table">
        <createTable tableName="DOMIBUS_CONNECTOR_USER_PWD">
            <column name="ID" type="${id.type}" >
                <constraints nullable="false" />
            </column>
            <column name="USER_ID" type="${id.type}"></column>
            <column name="PASSWORD" type="${varchar1024.type}"></column>
            <column name="SALT" type="${varchar512.type}"></column>
            <column name="CURRENT_PWD" type="BOOLEAN"></column>
            <column name="INITIAL_PWD" type="BOOLEAN"></column>
            <column name="CREATED" type="TIMESTAMP"></column>
        </createTable>
    </changeSet>

