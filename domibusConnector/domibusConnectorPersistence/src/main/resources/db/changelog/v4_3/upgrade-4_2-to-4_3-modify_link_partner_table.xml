<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">


    <changeSet id="extend_evidence_table" author="SKS" onValidationFail="MARK_RAN"
               failOnError="false">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                <![CDATA[SELECT COUNT(TAG) FROM DC_DB_VERSION WHERE TAG > 'V4.3.0';]]></sqlCheck>
        </preConditions>
        <comment>Modifies link partner table, so the table contains information about LinkMode sending and receiving</comment>

        <dropColumn tableName="DC_LINK_PARTNER" columnName="LINK_MODE" />
        <addColumn tableName="DC_LINK_PARTNER">
            <column name="RCV_LINK_MODE" type="java.sql.Types.VARCHAR(20)" />
        </addColumn>
        <addColumn tableName="DC_LINK_PARTNER">
            <column name="SEND_LINK_MODE" type="java.sql.Types.VARCHAR(20)" />
        </addColumn>

    </changeSet>


</databaseChangeLog>