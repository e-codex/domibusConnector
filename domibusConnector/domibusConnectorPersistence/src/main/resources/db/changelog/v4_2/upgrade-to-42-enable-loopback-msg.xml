    <changeSet id="enable_loopback_messaging_support_in_db_drop_unique_constraints" author="domibusConnector" >
        <comment>JUEUSW-75 disable unique constraints for ebms and national message id to enable loopback sending of messages</comment>
        <dropUniqueConstraint tableName="DOMIBUS_CONNECTOR_MESSAGE"
                              uniqueColumns="EBMS_MESSAGE_ID"
                              constraintName="UQ_DOMIBUS_CONNE_EBMS_MESSAGE"
        />
        <dropUniqueConstraint tableName="DOMIBUS_CONNECTOR_MESSAGE"
                              uniqueColumns="BACKEND_MESSAGE_ID"
                              constraintName="UQ_DOMIBUS_CONNE_NAT_MESSAGE_"
        />
    </changeSet>

    <changeSet id="create_target_source" author="domibusConnector">
        <addColumn tableName="DOMIBUS_CONNECTOR_MESSAGE">
            <column name="DIRECTION_SOURCE" type="java.sql.Types.VARCHAR(20)"></column>
            <column name="DIRECTION_TARGET" type="java.sql.Types.VARCHAR(20)"></column>
        </addColumn>
    </changeSet>

    <changeSet id="enable_loopback_messaging_support_in_db_create_unique_constraints" author="domibusConnector" >
        <comment>JUEUSW-75 create unique constraints on message direction_target</comment>
        <addUniqueConstraint tableName="DOMIBUS_CONNECTOR_MESSAGE"
                             columnNames="EBMS_MESSAGE_ID,DIRECTION_TARGET"
                             constraintName="UQ_DC_MSG_EBMSID_DIRECTION_TARGET"
        />
        <addUniqueConstraint tableName="DOMIBUS_CONNECTOR_MESSAGE"
                             columnNames="BACKEND_MESSAGE_ID,DIRECTION_TARGET"
                             constraintName="UQ_DC_MSG_NATID_DIRECTION_TARGET"
        />
    </changeSet>




</databaseChangeLog>