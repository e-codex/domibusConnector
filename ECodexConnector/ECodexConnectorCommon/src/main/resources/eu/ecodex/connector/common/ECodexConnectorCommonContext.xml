<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<import resource="dao.xml"/>
	
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">

		<property name="location">
			<value>${ecodex.connector.properties.location}</value>
		</property>
	</bean>
	
	<bean id="connectorProperties" class="eu.ecodex.connector.common.ECodexConnectorProperties">
		<property name="gatewayEndpointAddress" value="${gateway.endpoint.address}" />
	</bean>
	
	<bean id="messageStateLogger" class="eu.ecodex.connector.common.MessageStateLogger">
		<property name="loggerDao" ref="messageStateLogDao" />
	</bean>
	
</beans>