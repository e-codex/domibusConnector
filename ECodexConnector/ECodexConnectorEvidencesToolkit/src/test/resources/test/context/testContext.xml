<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

<bean id="propertyPlaceholderConfigurer" 
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
  </bean>
  
	<bean id="evidencesToolkit"
		class="eu.ecodex.connector.evidences.ECodexConnectorEvidencesToolkitImpl">
		<property name="evidenceBuilder" ref="evidenceBuilder" />
		<property name="hashValueBuilder" ref="hashValueBuilder" />
		<property name="connectorProperties" ref="connectorProperties" />
	</bean>

	<bean id="evidenceBuilder" class="eu.ecodex.evidences.ECodexEvidenceBuilder">
		<constructor-arg value="${user.dir}/src/test/resources/keystore/evidenceBuilderStore.jks" />
		<constructor-arg value="123456" />
		<constructor-arg value="evidenceBuilderKey" />
		<constructor-arg value="123456" />
	</bean>

	<bean id="hashValueBuilder" class="eu.ecodex.connector.evidences.HashValueBuilder">
		<constructor-arg value="MD5" />
	</bean>

	<bean id="connectorProperties" class="eu.ecodex.connector.common.ECodexConnectorProperties">
		<property name="gatewayEndpointAddress" value="someGatewayEndpointAddress" />
		<property name="gatewayName" value="someGatewayName" />
		<property name="postalAddressStreet" value="Teststreet" />
		<property name="postalAddressLocality" value="Testlocality" />
		<property name="postalAddressPostalCode" value="12345" />
		<property name="postalAddressCountry" value="Testcountry" />
	</bean>

</beans>