<assembly>
	<id>${project.version}</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- ==================== Copying DB Scripts ================= -->
		<fileSet>
			<directory>${project.basedir}/DbScripts</directory>
			<outputDirectory>${documentation.output.dir}/db-scripts</outputDirectory>
		</fileSet>
		
		<!-- ==================== Copying Docs ================= -->
		<fileSet>
			<directory>${project.basedir}/Docs</directory>
			<outputDirectory>${documentation.output.dir}/guides</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/ReleaseNotes
			</directory>
			<outputDirectory>${release.notes.output.dir}
			</outputDirectory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/ExampleProperties</directory>
			<outputDirectory>${documentation.output.dir}/properties</outputDirectory>
		</fileSet>
		
	</fileSets>

	<files>
		<!-- ==================== Copying Parent POM ================= -->
		<file>
			<source>${project.basedir}/pom.xml</source>
			<outputDirectory>${webadmin.build.dir}</outputDirectory>
		</file>
		
		<file>
			<source>${project.basedir}/libs/ECodexConnectorCommon-2.0-SNAPSHOT.jar</source>
			<outputDirectory>${webadmin.build.dir}/libs</outputDirectory>
		</file>


	</files>


</assembly>