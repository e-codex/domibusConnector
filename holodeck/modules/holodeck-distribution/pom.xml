<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.holodeck</groupId>
    <artifactId>holodeck</artifactId>
    <version>1.0</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.holodeck</groupId>
  <artifactId>holodeck-distribution</artifactId>
  <name>Holodeck Distribution</name>

  <properties>
    <!-- Modify the value of axis2-home and tomcat-home and axis2.xml -->
    <axis2-home>../../extra/axis2-war-1.5.1</axis2-home>
    <tomcat-home>../../extra/tomcat-6.0.26</tomcat-home>
    <axis2.xml>src/main/conf/axis2-1.5.1/axis2.xml</axis2.xml>

    <holodeck.build.dir>/../../../../target/holodeck</holodeck.build.dir>
  </properties>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-beta-3</version>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/assembly.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>create-distribution-package</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    
    <dependency>
      <groupId>org.holodeck</groupId>
      <artifactId>holodeck-ebms3</artifactId>
      <scope>system</scope>
      <systemPath>${basedir}/../holodeck-ebms3/target/holodeck-ebms3.jar</systemPath>
    </dependency> 

    <dependency>
      <groupId>org.holodeck</groupId>
      <artifactId>holodeck-security</artifactId>
      <scope>system</scope>
      <systemPath>${basedir}/../holodeck-security/target/holodeck-security.jar</systemPath>
    </dependency>

    <dependency>
      <groupId>org.holodeck</groupId>
      <artifactId>holodeck-backend</artifactId>
      <scope>system</scope>
      <systemPath>${basedir}/../holodeck-backend/target/holodeck-backend.jar</systemPath>
    </dependency>

  </dependencies>
  
  
</project>