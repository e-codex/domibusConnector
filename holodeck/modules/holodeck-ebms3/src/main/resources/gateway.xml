	<consumption>
		<consumer className="org.holodeck.ebms3.consumers.impl.SaveToFolder">
			<!-- a parameter to indicate to the consumer application "ConsumerTest" 
				where to save the attachment in the request. The value could be either an 
				absolute path or relative to the "Received_Messages_Folder" (directory where 
				the MSH saves attachments of the received messages) -->
			<parameter name="directory">Messages</parameter>
		</consumer>
	</consumption>

	<consumption>
		<consumer className="org.holodeck.ebms3.consumers.impl.SaveToTopic">
			<parameter name="jndi.destination">java:comp/env/jms/holodeckTopic</parameter>
			<parameter name="jndi.ConnectionFactory">java:comp/env/jms/ConnectionFactory
			</parameter>
		</consumer>
	</consumption>

	<consumption>
