<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.holodeck</groupId>
    <artifactId>holodeck</artifactId>
    <version>1.1</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.holodeck</groupId>
  <artifactId>holodeck-security</artifactId>
  <packaging>jar</packaging>
  <name>Holodeck-Security</name>

  <distributionManagement>
    <site>
      <id>internal</id>
      <url>file:///${basedir}/../../target/site/modules/holodeck-security</url>
    </site>
  </distributionManagement>

  <dependencies>
    <dependency>
      <groupId>org.holodeck</groupId>
      <artifactId>holodeck-common</artifactId>
      
      <scope>system</scope>
      <systemPath>${basedir}/../holodeck-common/target/holodeck-common.jar</systemPath>
      
    </dependency>
  </dependencies>

  <build>
    <finalName>holodeck-security</finalName>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>org.holodeck.security.samples.policy.sample02.Client</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
