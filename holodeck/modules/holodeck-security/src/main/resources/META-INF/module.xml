<module name="holodeck-security" class="org.holodeck.security.module.SecurityModule">

  <parameter name="SecurityConfigFile">../../../../config/security-config.xml</parameter>
  <parameter name="PoliciesFolder">../../../../config/policies</parameter>
  <parameter name="KeysFolder">../../../../config/keys</parameter>


  <InFlow>
    <handler name="recipient" class="org.holodeck.security.handlers.RecipientHandler">
      <order phase="holodeckSecurityInPhase" phaseFirst="true"/>
    </handler>
  </InFlow>

  <OutFlow>
    <handler name="Packager" class="org.holodeck.security.handlers.InitiatorHandler">
      <order phase="holodeckSecurityOutPhase" phaseFirst="true"/>
    </handler>
  </OutFlow>

  <INFaultFlow/>

  <OutFaultFlow/>

</module>