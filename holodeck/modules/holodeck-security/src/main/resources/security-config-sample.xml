<config>

  <security name="sign">
    <policy>policy-sign-body.xml</policy>

    <initiator>
      <!-- 
         =====================================================================================  
          "client" identifies the entry in the keystore that references the needed private key. 
          The callbackClass value names the application class that will provide the password 
          needed by the Security module to be able to access the private key. This class is 
          automatically invoked by the Security module.
         ===================================================================================== 
      -->
      <user callbackClass="org.holodeck.security.sample.PWCBHandler">client</user>

      <!-- 
         =====================================================================================  
          The following element is not needed for signature-only
         ===================================================================================== 
      -->
      <encryptionUser>service</encryptionUser>

      <!-- 
         =====================================================================================  
          specify keystore information for private key of sender. "apache" is the pwd necessary 
          to open the keystore file.
         ===================================================================================== 
      -->
      <keystore type="JKS" password="apache">client.jks</keystore>
    </initiator>
    <recipient>
      <user callbackClass="org.holodeck.security.sample.PWCBHandler">service</user>

      <!-- 
         =====================================================================================  
          specify keystore entry for public key of sender (no password needed for public keys).
         ===================================================================================== 
      -->
      <encryptionUser>client</encryptionUser>

      <!-- 
         =====================================================================================  
          specify keystore information for public key of sender. "apache" is the pwd necessary 
          to open the keystore file. This keystore contains also private and public keys of this 
          receiver.
         ===================================================================================== 
      -->
      <keystore type="JKS" password="apache">service.jks</keystore>
    </recipient>
  </security>

