<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" 
	       width="100%" height="100%">

  <mx:VBox width="100%" height="100%" borderStyle="solid">
  	<mx:HBox width="100%">
      <mx:Label text="Property Name: "/>
      <mx:TextInput id="_propertyName" width="45%" />
      <mx:Label text="Type: "/>
      <mx:TextInput id="_type" width="30%" />
      <mx:CheckBox id="_required" label="required" />
  	</mx:HBox>
  	<mx:HBox width="100%">
  	  <mx:Label text="Description: "/>
      <mx:TextInput id="_description" width="95%" />
  	  <mx:Button label="Add" click="addProperty()" />
  	</mx:HBox>
  	<mx:HBox width="100%">
  	  <mx:DataGrid width="97%" height="106" id="_propertiesGrid" 
                 liveScrolling="true" draggableColumns="true" 
  	             dragMoveEnabled="true" resizableColumns="true">
        <mx:columns>
          <mx:Array>
            <mx:DataGridColumn dataField="name" headerText="Property Name"/>
            <mx:DataGridColumn dataField="type" headerText="Type"/>
            <mx:DataGridColumn dataField="required" headerText="Required"/>
            <mx:DataGridColumn dataField="description" headerText="Description"/>
          </mx:Array>
        </mx:columns>
      </mx:DataGrid>
      <mx:Button label="Delete" click="deleteProperty()" />
    </mx:HBox>  
  </mx:VBox>
  
  <mx:Script source="messagePropertiesScript.as" />
</mx:Canvas>
