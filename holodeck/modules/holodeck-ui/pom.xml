          <contextRoot>holodeck</contextRoot>
          <services>src/main/webapp/WEB-InF/flex/services-config.xml</services>
          <debug>true</debug>
          <allowSourcePathOverlap>true</allowSourcePathOverlap>
        </configuration>
      </plugin>
