<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.holodeck</groupId>
		<artifactId>holodeck</artifactId>
		<version>1.0</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>holodeck-backend</artifactId>
	<packaging>jar</packaging>
	<name>Holodeck-Backend</name>

	<distributionManagement>
		<site>
			<id>internal</id>
			<url>file:///${basedir}/../../target/site/modules/holodeck-backend</url>
		</site>
	</distributionManagement>

	<dependencies>
		<dependency>
			<groupId>org.holodeck</groupId>
			<artifactId>holodeck-common</artifactId>
			<scope>system</scope>
			<systemPath>${basedir}/../holodeck-common/target/holodeck-common.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.holodeck</groupId>
			<artifactId>holodeck-ebms3</artifactId>
			<scope>system</scope>
			<systemPath>${basedir}/../holodeck-ebms3/target/holodeck-ebms3.jar</systemPath>
		</dependency>
	</dependencies>

	<build>
		<finalName>holodeck-backend</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>hibernate3-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<outputFile>${project.artifactId}_create_tabless.sql</outputFile>
					<components>
						<component>
							<name>hbm2ddl</name>
							<implementation>annotationconfiguration</implementation>
						</component>
					</components>
					<componentProperties>
						<implementation>jpaconfiguration</implementation>
						<persistenceunit>backend-oracle</persistenceunit>
						<outputfilename>schema.ddl</outputfilename>
						<drop>true</drop>
						<create>true</create>
						<export>true</export>
						<format>true</format>
					</componentProperties>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>hbm2ddl</goal>
						</goals>
					</execution>
				</executions>
        		<dependencies>
<!--           		<dependency> -->
<!--             		<groupId>org.apache.derby</groupId> -->
<!--             		<artifactId>derby</artifactId> -->
<!--             		<version>10.4.2.0</version> -->
<!--          		</dependency> -->
<!--           		<dependency> -->
<!--             		<groupId>mysql</groupId> -->
<!--             		<artifactId>mysql-connector-java</artifactId> -->
<!--             		<version>5.1.6</version> -->
<!--           		</dependency> -->
					<dependency>
					    <groupId>com.oracle</groupId>
					    <artifactId>ojdbc</artifactId>
					    <version>10.2.0.5</version>
					</dependency>	
		        </dependencies>
			</plugin>
		</plugins>
	</build>
</project>