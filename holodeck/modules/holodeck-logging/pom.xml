<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.holodeck</groupId>
    <artifactId>holodeck</artifactId>
    <version>1.0</version>
    <relativePath>../../../git/ecodex/holodeck</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>holodeck-logging</artifactId>
  <packaging>jar</packaging>
  <name>Holodeck Logging</name>

  <distributionManagement>
    <site>
      <id>internal</id>
      <url>file:///${basedir}/../../target/site/modules/holodeck-logging</url>
    </site>
  </distributionManagement>
  
  <dependencies>
    
    <dependency>
      <groupId>org.holodeck</groupId>
      <artifactId>holodeck-common</artifactId>     
      <scope>system</scope>
      <systemPath>${basedir}/../holodeck-common/target/holodeck-common.jar</systemPath>
      
   </dependency> 
  </dependencies>
    
  <build>
    <finalName>holodeck-logging</finalName>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>net.hotels.HotelTest</mainClass>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>hibernate3-maven-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <outputFile>${project.artifactId}_create_tabless.sql</outputFile>
          <components>
            <component>
              <name>hbm2ddl</name>
              <implementation>annotationconfiguration</implementation>
            </component>
          </components>
          <componentProperties>
            <implementation>jpaconfiguration</implementation>
            <persistenceunit>logging-mysql</persistenceunit>
            <outputfilename>schema.ddl</outputfilename>
            <drop>true</drop>
            <create>true</create>
            <export>true</export>
            <format>true</format>
          </componentProperties>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>hbm2ddl</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <!--<dependency>
            <groupId>org.apache.derby</groupId>
            <artifactId>derby</artifactId>
            <version>10.4.2.0</version>
          </dependency-->
          <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.6</version>
          </dependency>
        </dependencies>
      </plugin>
      
    </plugins>
  </build>
</project>
