<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
 
	<bean id="monitoringTask" class="eu.domibus.webadmin.quartz.MonitoringTask">
		<property name="connectorMonitoringService" ref="connectorMonitoringService" />
      	<property name="webAdminProperties" ref="webAdminProperties" />
	</bean>
 
	<!-- Spring Quartz -->
	<bean name="monitoringJob" class="org.springframework.scheduling.quartz.JobDetailBean">
 
		<property name="jobClass" value="eu.domibus.webadmin.quartz.MonitoringJob" />
 
		<property name="jobDataAsMap">
		  <map>
			<entry key="monitoringTask" value-ref="monitoringTask" />
		  </map>
		</property>
 
	</bean>
 

 
	<!-- Simple Trigger, run every 5 seconds -->
	<bean id="simpleMonitoringTrigger" 
                class="org.springframework.scheduling.quartz.SimpleTriggerBean">
 
		<property name="jobDetail" ref="monitoringJob" />
		<property name="repeatInterval" value="60000" />
		<property name="startDelay" value="1000" />
 
	</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="monitoringJob" />
			</list>
		</property>
 
		<property name="triggers">
			<list>
				<ref bean="simpleMonitoringTrigger" />
			</list>
		</property>
	</bean>
 
</beans>