<assembly>
	<id>${project.version}</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- ==================== Copying DB Scripts ================= -->
		<fileSet>
			<directory>${webadmin.resources.dir}/DbScripts</directory>
			<outputDirectory>${documentation.output.dir}/db-scripts</outputDirectory>
		</fileSet>
		
		<!-- ==================== Copying Docs ================= -->
		<fileSet>
			<directory>${webadmin.resources.dir}/Docs</directory>
			<outputDirectory>${documentation.output.dir}/guides</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${webadmin.resources.dir}/ExampleProperties</directory>
			<outputDirectory>${documentation.output.dir}/properties</outputDirectory>
		</fileSet>
		
	</fileSets>

	<files>
		<!-- ==================== Copying Parent POM ================= -->
		<file>
			<source>${project.basedir}/pom.xml</source>
			<outputDirectory>${webadmin.build.dir}</outputDirectory>
		</file>
		
		<!-- ==================== Copying WAR ================= -->
		<file>
			<source>${project.build.directory}/domibusWebAdmin.war</source>
			<outputDirectory>${webadmin.build.dir}</outputDirectory>
		</file>
	</files>

	<!-- ==================== Copying Non-Public Dependecies ================= -->

	<dependencySets>
		<dependencySet>
			<scope>runtime</scope>
			<outputDirectory>${webadmin.build.dir}/libs</outputDirectory>
			<includes>
				<include>*:domibusConnectorCommon*:*</include>
			</includes>
		</dependencySet>
	</dependencySets>

</assembly>